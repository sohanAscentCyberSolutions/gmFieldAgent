<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="CustomDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowLightStatusBar" >true</item>
    </style>



    <style name="Theme.Custom.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_primary</item>
    </style>


    <style name="Circular.ImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="ChipText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="Theme.MyDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Define the style for circular chip -->
    <style name="Widget.MaterialComponents.Chip.CircularImage" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconSize">48dp</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipIconTint">?attr/colorOnPrimary</item>
        <item name="chipBackgroundColor">@color/md_theme_primaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>

    <!-- Circular shape appearance -->
    <style name="ShapeAppearance.MaterialComponents.SmallComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>




    <style name="M3_title_small">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>


    <style name="m3_label_medium">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textFontWeight"  >600</item>
    </style>


    <style name="m3_label_medium.bold">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight"  >600</item>
    </style>


    <style name="m3_label_large">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- styles.xml -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>



    <style name="ChipStyle.Success" parent="ChipStyle">
        <item name="chipBackgroundColor">@color/colorSuccessContainer</item>
        <item name="android:textColor">@color/colorOnSuccessContainer</item>
    </style>


    <style name="ChipStyle.Warning" parent="ChipStyle">
        <item name="chipBackgroundColor">@color/md_theme_errorContainer</item>
        <item name="android:textColor">@color/colorError</item>
    </style>


    <style name="M3_heading_small">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>


    <style name="m3_label_large.md_theme_dark_background" parent="m3_label_large">
        <item name="android:textColor">@color/md_theme_secondary</item>
    </style>



    <style name="m3_label_large.md_theme_light_primary" parent="m3_label_large">

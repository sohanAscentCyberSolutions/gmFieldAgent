<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium"
    >


    <com.google.android.material.chip.Chip
        android:id="@+id/chipOutWarranty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/out_of_warranty"
        android:clickable="false"
        android:visibility="gone"
        app:chipBackgroundColor="@color/md_theme_errorContainer"
        app:chipIcon="@drawable/cross_circle_rounded"
        app:layout_constraintBottom_toTopOf="@+id/tvProductSerial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.chip.Chip
        android:id="@+id/chipInWarranty"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:clickable="false"
        android:visibility="gone"
        android:text="In Warranty"
        android:textColor="@color/colorOnSuccessContainer"
        app:chipBackgroundColor="@color/colorSuccessContainer"
        app:layout_constraintBottom_toTopOf="@+id/tvProductSerial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvProductSerial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="#0909"
        app:layout_constraintBottom_toTopOf="@id/tvProductName"
        app:layout_constraintStart_toStartOf="@+id/tvProductName" />



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvProductName"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ending On 12/04/2024"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/addbtn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:textColor="@color/md_theme_scrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
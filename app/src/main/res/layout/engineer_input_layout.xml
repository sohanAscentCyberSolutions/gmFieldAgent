<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:focusable="true"
    >

<com.google.android.material.textview.MaterialTextView
    android:id="@+id/tvengineer_input_heading"
    style="@style/M3_title_medium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Engineerâ€™s Inputs"
    android:textStyle="bold"
    android:drawablePadding="@dimen/margin_extra_small"
    android:drawableLeft="@drawable/ic_engineer"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkable="true"
    android:layout_marginVertical="@dimen/margin_small"
    app:layout_constraintTop_toBottomOf="@+id/tvengineer_input_heading"
    app:layout_constraintEnd_toStartOf="parent"
    android:clickable="true"
    android:focusable="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/padding_medium"
        android:background="@color/md_theme_surface"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvengineer_remark_heading"
            style="@style/M3_label_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/engineer_remark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvengineer_remark"
            style="@style/M3_body_small"
            android:layout_width="0dp"
            android:layout_marginVertical="@dimen/margin_small"
            android:layout_height="wrap_content"
            android:text="@string/engineer_remark"
            app:layout_constraintTop_toBottomOf="@+id/tvengineer_remark_heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_pictures_uploaded_heading"
            style="@style/M3_label_medium"
            android:layout_width="0dp"
            android:layout_marginVertical="@dimen/margin_medium"
            android:layout_height="wrap_content"
            android:text="Uploaded Pictures"
            app:layout_constraintTop_toBottomOf="@+id/tvengineer_remark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageRV"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/margin_medium"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pictures_uploaded_heading"
            tools:listitem="@layout/upload_card_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>



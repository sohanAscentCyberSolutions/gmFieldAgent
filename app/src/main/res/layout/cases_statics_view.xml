<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:id="@+id/cardStatistics"
    app:cardBackgroundColor="@color/md_theme_background"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg_light_gray"
            android:text="@string/cases"
            android:id="@+id/tvCases"
            style="@style/M3_label_medium.medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_marginVertical="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvCases"
            app:layout_constraintTop_toBottomOf="@+id/tvCases"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:weightSum="4"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/casesContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="@dimen/padding_extra_small"
                        android:src="@drawable/hug"
                        android:layout_width="6dp"
                        android:layout_height="6dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvNewCases"
                        style="@style/M3_title_large_surface_variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="46" />


                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    style="@style/M3_label_medium.home"
                    app:layout_constraintTop_toBottomOf="@+id/casesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/newStr" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:id="@+id/dummyView1"
                android:layout_width="1dp"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@color/md_theme_outlineVariant"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/acceptedContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:layout_margin="@dimen/padding_extra_small"
                        android:src="@drawable/hug"
                        android:layout_width="6dp"
                        android:layout_height="6dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvAcceptedCases"
                        style="@style/M3_title_large_surface_variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="46" />


                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    style="@style/M3_label_medium.home"
                    app:layout_constraintTop_toBottomOf="@+id/acceptedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/accepted" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="1dp"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@color/md_theme_outlineVariant"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/rejectedContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:layout_margin="@dimen/padding_extra_small"
                        android:src="@drawable/hug"
                        android:layout_width="6dp"
                        android:layout_height="6dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvRejectedCases"
                        style="@style/M3_title_large_surface_variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4" />


                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    style="@style/M3_label_medium.home"
                    app:layout_constraintTop_toBottomOf="@+id/rejectedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rejected" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="1dp"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@color/md_theme_outlineVariant"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/closedContainer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:layout_margin="@dimen/padding_extra_small"
                        android:src="@drawable/hug"
                        android:layout_width="6dp"
                        android:layout_height="6dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvClosedCases"
                        style="@style/M3_title_large_surface_variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="46" />


                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    style="@style/M3_label_medium.home"
                    app:layout_constraintTop_toBottomOf="@+id/closedContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/closed" />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
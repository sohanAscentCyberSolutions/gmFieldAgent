<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvIssueTitle"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="AMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />




    <com.google.android.material.chip.Chip
        android:id="@+id/amclayoutChip"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:visibility="gone"
        android:backgroundTint="@color/md_theme_primaryContainer"
        app:layout_constraintStart_toStartOf="@+id/tvIssueTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvIssueTitle" />



    <com.google.android.material.chip.ChipGroup
        android:id="@+id/yesChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvIssueTitle">


        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/colorOnSuccessContainer"
            app:chipBackgroundColor="@color/colorSuccessContainer"
            app:layout_constraintStart_toStartOf="@+id/tvIssueTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvIssueTitle" />


        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            app:layout_constraintStart_toStartOf="@+id/tvIssueTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvIssueTitle" />


    </com.google.android.material.chip.ChipGroup>





    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvProductSerial"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Ending On 12/04/2024"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amclayoutChip"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvViewDetails"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_medium"
        android:text="View Details"
        app:layout_constraintBottom_toBottomOf="@+id/ivCall"
        app:layout_constraintEnd_toStartOf="@+id/ivCall"
        app:layout_constraintTop_toTopOf="@+id/ivCall" />

    <ImageView
        android:id="@+id/ivCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />









</androidx.constraintlayout.widget.ConstraintLayout>
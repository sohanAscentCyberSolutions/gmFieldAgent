<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/fab_margin">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/commissioningTitle"
            style="@style/M3_title_medium"
            android:layout_width="0dp"
            android:paddingHorizontal="@dimen/padding_small"
            android:paddingVertical="@dimen/padding_extra_small"
            android:background="@drawable/capsule_shape_bg"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Commissioning" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/caseIdValue"
            style="@style/M3_body_medium"
            android:paddingHorizontal="@dimen/padding_small"
            android:paddingVertical="@dimen/padding_extra_small"
            android:layout_width="0dp"
            android:background="@drawable/capsule_shape_right_bg"
            android:layout_height="wrap_content"
            android:text="Case Closed"
            app:layout_constraintBottom_toBottomOf="@+id/commissioningTitle"
            app:layout_constraintStart_toEndOf="@+id/commissioningTitle"
            app:layout_constraintTop_toTopOf="@+id/commissioningTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/customerNameTitle"
            style="@style/m3_label_large"
            android:layout_marginTop="26dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Divyajot Industries"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commissioningTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/customerNameValue"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#3C6839"
            android:text="Case ID 22342"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/customerNameTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/customerNameTitle"
            app:layout_constraintTop_toTopOf="@+id/customerNameTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totalWorkTimeTitle"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Total Work Time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customerNameTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totalWorkTimeValue"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="45hrs 07mins"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/totalWorkTimeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/totalWorkTimeTitle"
            app:layout_constraintTop_toTopOf="@+id/totalWorkTimeTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totalJourneyTimeTitle"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total Journey Time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalWorkTimeTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totalJourneyTimeValue"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3hr 45mins"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/totalJourneyTimeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/totalJourneyTimeTitle"
            app:layout_constraintTop_toTopOf="@+id/totalJourneyTimeTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totalVisitsTitle"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total Visits"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalJourneyTimeTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/totalVisitsValue"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/totalVisitsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/totalVisitsTitle"
            app:layout_constraintTop_toTopOf="@+id/totalVisitsTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/customerRatingTitle"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Customer Ratings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalVisitsTitle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/customerRatingValue"
            style="@style/m3_label_large.md_theme_dark_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/customerRatingTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/customerRatingTitle"
            app:layout_constraintTop_toTopOf="@+id/customerRatingTitle" />


        <com.google.android.material.chip.Chip
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_onPrimary"
            android:visibility="gone"
            app:chipCornerRadius="@dimen/corner_radius_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/open" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>



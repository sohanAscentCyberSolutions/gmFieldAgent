<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.view.HomeFragment">


    <include
        android:id="@+id/toolbarlayout"
        layout="@layout/material_toolbar_without_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintStart_toStartOf="@id/guidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/toolbarlayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_medium">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvStatisticsTitle"
                style="@style/M3_title_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/statistics"
                app:layout_constraintEnd_toStartOf="@+id/tvDateRange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDateRange"
                style="@style/m3_label_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@drawable/bodared_text_view"
                android:drawableStart="@drawable/ic_calender"
                android:drawableEnd="@drawable/down_arrow"
                android:drawablePadding="@dimen/padding_small"
                android:fontFamily="@font/roboto_medium"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingVertical="@dimen/padding_small"
                android:text="@string/date_range"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvStatisticsTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrierTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tvStatisticsTitle,tvDateRange" />


            <include
                android:id="@+id/casesStaticsView"
                layout="@layout/cases_statics_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStatisticsTitle" />

            <include
                android:id="@+id/visitStaticsLayout"
                layout="@layout/visit_statics_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/casesStaticsView" />


            <LinearLayout
                android:id="@+id/TimeContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_small"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/visitStaticsLayout">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWorkTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/md_theme_background"
                    app:cardElevation="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_medium">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/titleWorkTime"
                            style="@style/M3_label_medium.medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg_light_gray"
                            android:gravity="center"
                            android:text="@string/total_work_time"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/totalWorkTimeValue"
                            style="@style/M3_title_large_surface_variant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:layout_marginTop="@dimen/margin_large"
                            android:gravity="center"
                            android:text="20 h 35 min"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/titleWorkTime" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardJourneyTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/md_theme_background"
                    app:cardElevation="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_medium">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/titleJournyTime"
                            style="@style/M3_label_medium.medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg_light_gray"
                            android:gravity="center"
                            android:paddingStart="@dimen/padding_small"
                            android:paddingTop="@dimen/padding_extra_small"
                            android:paddingEnd="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_extra_small"
                            android:text="@string/total_journey_time"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/totaljourneyTime"
                            style="@style/M3_title_large_surface_variant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_small"
                            android:gravity="center"
                            android:text="20 h 35 min"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/titleJournyTime" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCommissioning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_small"
                android:background="@drawable/ic_more_option"
                android:backgroundTint="@color/md_theme_surfaceBright"
                app:cardElevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TimeContainer">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_medium">

                    <ImageView
                        android:id="@+id/commissioninglogo"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_width"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:layout_marginVertical="@dimen/margin_medium"
                        android:src="@drawable/commissioninglogo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvTitleCommissioning"
                        style="@style/M3_title_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="@string/commissioning"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/commissioninglogo" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvnewCases"
                        style="@style/M3_label_medium.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:background="@drawable/md3light"
                        android:drawableLeft="@drawable/hug"
                        android:drawablePadding="@dimen/margin_small"
                        android:paddingHorizontal="@dimen/padding_large"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="13 New"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleCommissioning" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvOpenCases"
                        style="@style/M3_label_medium.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:background="@drawable/md3light"
                        android:drawablePadding="@dimen/padding_small"
                        android:paddingHorizontal="@dimen/padding_medium"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="11 Open"
                        app:layout_constraintStart_toEndOf="@id/tvnewCases"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleCommissioning" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvVisitCases"
                        style="@style/M3_label_medium.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:background="@drawable/md3light"
                        android:drawablePadding="@dimen/padding_small"
                        android:paddingHorizontal="@dimen/padding_medium"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="21 Visits"
                        app:layout_constraintStart_toEndOf="@id/tvOpenCases"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleCommissioning" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBreakdown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_medium"
                android:background="@drawable/ic_more_option"
                android:backgroundTint="@color/md_theme_surfaceBright"
                app:cardElevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardCommissioning">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_medium">

                    <ImageView
                        android:id="@+id/breakdownlogo"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_width"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:layout_marginVertical="@dimen/margin_medium"
                        android:src="@drawable/breakdown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvTitleBreakdown"
                        style="@style/M3_title_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="@string/breakdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/breakdownlogo" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvnewCasesBreakdown"
                        style="@style/M3_label_medium.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:layout_marginVertical="@dimen/margin_small"
                        android:background="@drawable/md3light"
                        android:drawableStart="@drawable/hug"
                        android:drawablePadding="@dimen/margin_small"
                        android:paddingHorizontal="@dimen/padding_large"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="23 New"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleBreakdown" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvOpenCasesBreakdown"
                        style="@style/M3_label_medium.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:layout_marginVertical="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/md3light"
                        android:drawablePadding="@dimen/padding_small"
                        android:paddingHorizontal="@dimen/padding_medium"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="25 Open"
                        app:layout_constraintStart_toEndOf="@id/tvnewCasesBreakdown"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleBreakdown" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvVisitCasesBreakdown"
                        style="@style/M3_label_medium.medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_medium"
                        android:layout_marginVertical="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/md3light"
                        android:drawablePadding="@dimen/padding_small"
                        android:paddingHorizontal="@dimen/padding_medium"
                        android:paddingVertical="@dimen/padding_small"
                        android:text="33 Visits"
                        app:layout_constraintStart_toEndOf="@id/tvOpenCasesBreakdown"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitleBreakdown" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_extra_large"
                android:src="@drawable/company_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardBreakdown" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_extra_large"
                android:text="Logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvIssueTitle"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/warranty_amp_other_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />


    <com.google.android.material.chip.Chip
        android:id="@+id/warrantyInfochip"
        style="@style/Widget.Material3.Chip.Filter"
        app:chipBackgroundColor="@color/colorSuccessContainer"
        android:textColor="@color/colorOnSuccessContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Warranty"
        app:layout_constraintStart_toStartOf="@+id/tvIssueTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvIssueTitle" />



    <com.google.android.material.chip.Chip
        android:id="@+id/noWarrantyChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/out_of_warranty"
        android:clickable="false"
        android:visibility="gone"
        app:chipBackgroundColor="@color/md_theme_errorContainer"
        app:chipIcon="@drawable/cross_circle_rounded"
        app:layout_constraintStart_toStartOf="@+id/tvIssueTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvIssueTitle" />



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvProductSerial"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Product Serial : #342453"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warrantyInfochip" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStartedOn"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Started On 26/10/2023"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductSerial" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvEndingOn"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ending On 12/04/2024"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStartedOn" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvViewDetails"
        style="@style/M3_label_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_medium"
        android:text="View Parts Details"
        app:layout_constraintBottom_toBottomOf="@+id/ivCall"
        app:layout_constraintEnd_toStartOf="@+id/ivCall"
        app:layout_constraintTop_toTopOf="@+id/ivCall" />

    <ImageView
        android:id="@+id/ivCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />









</androidx.constraintlayout.widget.ConstraintLayout>